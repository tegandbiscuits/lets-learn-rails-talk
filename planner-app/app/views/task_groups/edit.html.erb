<h1>Editing task group</h1>

<%= render "form", task_group: @task_group %>

<div class="mt-3">
  <%= link_to(
        "Cancel",
        @task_group,
        class: "btn btn-outline-secondary"
      ) %>
  <%= button_to(
        "Destroy this task group",
        @task_group,
        method: :delete,
        class: "btn btn-danger mt-5",
        data: { turbo_confirm: "Are you sure?" }
      ) %>
</div>
